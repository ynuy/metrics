.github/workflows/metrics.yml
name: Metrics
on:
  schedule: [{cron: "0 0 * * *"}]  # Met à jour chaque jour à minuit
  workflow_dispatch:
  push: {branches: ["main"]}

jobs:
  github-metrics:
    runs-on: ubuntu-latest
    steps:
      - uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.METRICS_TOKEN }}

          # ⚙️ Modules de base
          base: header, activity, community, repositories, metadata
          config_timezone: Europe/Paris
          config_display: columns
          config_order: base.header, base.repositories, base.activity, base.community, base.metadata

          # 🌙 Thème
          config_theme: dark

          # 🏷️ Langages
          plugin_languages: yes
          plugin_languages_ignored: html, css
          plugin_languages_details: bytes-size, percentage
          plugin_languages_limit: 8

          # 🧠 Habitudes de codage
          plugin_habits: yes
          plugin_habits_facts: yes
          plugin_habits_from: 200
          plugin_habits_days: 14

          # 📅 Calendrier des contributions
          plugin_isocalendar: yes
          plugin_isocalendar_duration: full-year

          # 💽 Musique (Apple Music)
          plugin_music: yes
          plugin_music_provider: apple
          plugin_music_mode: recent
          plugin_music_limit: 3
          plugin_music_playlist: https://music.apple.com/

          # 🏆 Succès
          plugin_achievements: yes
          plugin_achievements_display: detailed
          plugin_achievements_threshold: C

          # 🧰 Projets
          plugin_projects: yes
          plugin_projects_limit: 2
